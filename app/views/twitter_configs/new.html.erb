<h1>Twitter Configuration</h1>

<% form_for(@twitter_config) do |f| %>
  <%= f.error_messages %>
  <p>
    Your twitter username:<br/><%= f.text_field :twitter_username, :size => 30 %>
  </p>
  <p>
   Your twitter password:
    <br/>
    <%= f.password_field :twitter_password %>
  </p>



  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Back', session[:after_twitter] %>
